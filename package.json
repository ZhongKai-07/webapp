{
  "name": "@ucl/drone-webapp",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@8.12.1",
  "scripts": {
    "dev": "set NEXT_OUTPUT_MODE=standalone&& next dev",
    "build": "NEXT_OUTPUT_MODE=${NEXT_OUTPUT_MODE:-standalone} NODE_OPTIONS=--max_old_space_size=8192 next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "eslint src --fix && pnpm format",
    "lint:strict": "eslint --max-warnings=0 src",
    "typecheck": "NODE_OPTIONS=--max_old_space_size=8192 tsc --noEmit --incremental false",
    "test:watch": "jest --watch",
    "test": "jest",
    "test:ci": "jest --ci --json --coverage --testLocationInResults --outputFile=report.json",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "postbuild": "next-sitemap --config next-sitemap.config.js",
    "prepare": "husky install"
  },
  "dependencies": {
    "@mapbox/mapbox-gl-draw": "^1.4.3",
    "@next/bundle-analyzer": "^14.1.0",
    "@react-icons/all-files": "https://github.com/react-icons/react-icons/releases/download/v4.12.0/react-icons-all-files-4.12.0.tgz",
    "@reduxjs/toolkit": "^2.1.0",
    "@turf/bbox": "^6.5.0",
    "@turf/center-of-mass": "^6.5.0",
    "@turf/centroid": "^6.5.0",
    "@turf/circle": "^6.5.0",
    "@turf/helpers": "^6.5.0",
    "@turf/union": "^6.5.0",
    "axios": "^1.6.7",
    "clsx": "^2.0.1",
    "firebase": "^10.7.2",
    "geojson": "^0.5.0",
    "lucide-react": "^0.297.0",
    "mapbox-gl": "^3.0.1",
    "next": "^14.0.4",
    "next-redux-wrapper": "^8.1.0",
    "react": "^18.2.0",
    "react-animated-slider": "^2.0.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.12.0",
    "react-redux": "^9.1.0",
    "redux": "^5.0.1",
    "sharp": "^0.32.6",
    "tailwind-merge": "^2.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.3.0",
    "@commitlint/config-conventional": "^16.2.4",
    "@svgr/webpack": "^8.1.0",
    "@tailwindcss/forms": "^0.5.7",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "*",
    "@testing-library/react-hooks": "*",
    "@testing-library/user-event": "^14.5.2",
    "@types/geojson": "^7946.0.13",
    "@types/jest": "^29.5.11",
    "@types/mapbox-gl": "^2.7.20",
    "@types/mapbox__mapbox-gl-draw": "^1.4.6",
    "@types/react": "^18.2.48",
    "@types/react-image-gallery": "^1.2.4",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.0.4",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^7.0.4",
    "ignore-loader": "^0.1.2",
    "jest": "^27.5.1",
    "jest-fetch-mock": "^3.0.3",
    "lint-staged": "^12.5.0",
    "msw": "^2.1.5",
    "next-router-mock": "^0.8.0",
    "next-sitemap": "^2.5.28",
    "node-fetch": "^3.3.2",
    "postcss": "^8.4.33",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "tailwindcss": "^3.3.7",
    "typescript": "^4.9.5"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --max-warnings=0",
      "prettier -w"
    ],
    "**/*.{json,css,scss,md,webmanifest}": [
      "prettier -w"
    ]
  }
}
